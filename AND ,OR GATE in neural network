class SimplePerceptron:
    def __init__(self, learning_rate=0.1, epochs=20):
        self.weights = [0.0, 0.0] # Two inputs
        self.bias = 0.0
        self.lr = learning_rate
        self.epochs = epochs

    def predict(self, inputs):
        # Calculate Weighted Sum: (x1*w1 + x2*w2) + bias
        total_sum = self.bias
        for i in range(len(inputs)):
            total_sum += inputs[i] * self.weights[i]
        
        # Step Activation Function
        return 1 if total_sum >= 0 else 0

    def train(self, training_data, targets):
        for epoch in range(self.epochs):
            for i in range(len(training_data)):
                prediction = self.predict(training_data[i])
                error = targets[i] - prediction
                
                # Update weights and bias based on error
                if error != 0:
                    for j in range(len(self.weights)):
                        self.weights[j] += self.lr * error * training_data[i][j]
                    self.bias += self.lr * error
